<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KatalogProduk</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            padding-top: 70px; /* agar konten tidak tertutup navbar fixed */
        }

        /* WhatsApp floating button */
        .wa-float {
            position: fixed;
            bottom: 80px;
            right: 20px;
            z-index: 999;
            background-color: transparent;
            border-radius: 50%;
            transition: transform 0.3s;
        }

            .wa-float:hover {
                transform: scale(1.1);
            }

            .wa-float img {
                width: 50px;
                height: 50px;
            }

        /* Dropdown menu muncul saat hover */
        .dropdown:hover .dropdown-menu {
            display: block;
        }

        /* Interaktif untuk item dropdown */
        .dropdown-item {
            transition: transform 0.2s ease, background-color 0.2s ease;
            border-radius: 0.5rem;
            padding: 8px 16px;
            cursor: pointer;
        }

            .dropdown-item:active,
            .dropdown-item:focus {
                transform: scale(1.1);
                background-color: #87CEFA; /* biru langit */
                border-radius: 999px; /* jadi oval */
            }

            .dropdown-item:hover {
                transform: scale(1.05);
                background-color: #87CEFA;
                border-radius: 999px; /* jadi oval */
            }

        /* Interaktif untuk tombol dropdown */
        #katalogDropdown {
            transition: transform 0.2s ease, background-color 0.2s ease;
            border-radius: 999px;
        }

            #katalogDropdown:hover {
                transform: scale(1.05);
                background-color: #0069d9;
            }

            #katalogDropdown:active {
                transform: scale(1.1);
            }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Header -->
    <header>
        <nav class="navbar navbar-light bg-white border-bottom shadow-sm fixed-top">
            <div class="container-fluid">
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle px-4 py-2" type="button" id="katalogDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        KatalogProduk
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="katalogDropdown">
                        <li><a class="dropdown-item" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a class="dropdown-item" asp-controller="Product" asp-action="List">Produk</a></li>
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Login">Login</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-fill">
        <div class="container pb-5">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-light text-center text-muted py-3 mt-auto border-top">
        <div class="container">
            &copy; 2025 - KatalogProduk by Jali Suhaman - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- WhatsApp Floating Button -->
    <a href="https://wa.me/6281234567890" class="wa-float" target="_blank" title="Hubungi Kami via WhatsApp">
        <img src="https://img.icons8.com/color/48/000000/whatsapp--v1.png" alt="WhatsApp" />
    </a>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
