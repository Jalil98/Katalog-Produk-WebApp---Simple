@model KatalogProduk.Models.OrderViewModel

@{
    ViewData["Title"] = "Formulir Checkout";
}

<h2>Checkout Produk</h2>

<form asp-action="Checkout" method="post" class="mt-4">
    <input type="hidden" asp-for="ProductId" />
    <input type="hidden" asp-for="ProductName" />
    <input type="hidden" asp-for="TotalPrice" />

    <div class="mb-3">
        <label asp-for="ProductName" class="form-label"></label>
        <input asp-for="ProductName" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="OrderDate" class="form-label"></label>
        <input asp-for="OrderDate" class="form-control" type="date" />
        <span asp-validation-for="OrderDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ShippingLocation" class="form-label"></label>
        <input asp-for="ShippingLocation" class="form-control" />
        <span asp-validation-for="ShippingLocation" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TotalPrice" class="form-label"></label>
        <input asp-for="TotalPrice" class="form-control" readonly />
    </div>

    <button type="submit" class="btn btn-success">Konfirmasi Pesanan</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
